# Mean Reversion Trading Framework - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# RDS Connection Details (update after running Terraform)
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=mean_reversion
DB_USER=trader
DB_PASSWORD=your-secure-password-here

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# SSL Mode (require, verify-full, disable)
DB_SSL_MODE=require

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS Secrets Manager (optional - for retrieving DB password)
DB_SECRET_NAME=mean-reversion-db-password-dev

# S3 Configuration (for data storage)
S3_BUCKET_NAME=mean-reversion-data
S3_RESULTS_PREFIX=results/
S3_BACKUPS_PREFIX=backups/

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/mean_reversion.log

# =============================================================================
# BACKTEST CONFIGURATION
# =============================================================================

# Stock Data
STOCK_DATA_PATH=data/raw/stock_data.csv
NUM_STOCKS=250
START_DATE=2013-01-01
END_DATE=2023-12-31

# Parallel Processing
N_JOBS=8  # Number of parallel workers (-1 for all CPUs)
BATCH_SIZE=50

# =============================================================================
# PHASE CONFIGURATION
# =============================================================================

# Phase to run (1-6, or 'all')
CURRENT_PHASE=1

# Phase directories
PHASE_CONFIGS_DIR=configs/
RESULTS_DIR=data/results/
REPORTS_DIR=reports/

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Caching
ENABLE_CACHING=true
CACHE_DIR=.cache/

# Memory limits (in MB)
MAX_MEMORY_PER_WORKER=4096

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# CloudWatch
ENABLE_CLOUDWATCH=false
CLOUDWATCH_NAMESPACE=MeanReversionTrading

# SNS Alerts
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:rds-alerts
ENABLE_SNS_ALERTS=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Testing
TEST_MODE=false
TEST_STOCKS=10
TEST_MAX_CONFIGS=5

# Debug
DEBUG=false
VERBOSE=false
